<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.alexvasilkov.gestures.sample">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>

    <application
        android:allowBackup="true"
        android:name=".SampleApplication"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme.Dark"
        android:label="GestureViews">

        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ImagesPagerActivity"
            android:label="ImageView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ImageCroppingActivity"
            android:label="ImageView (rotate &amp; crop)">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ImageSnapshotActivity"
            android:label="Cropped image"/>

        <activity
            android:name=".activities.LayoutPagerActivity"
            android:label="Layout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.TextViewActivity"
            android:label="TextView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.FlickrListActivity"
            android:label="Flickr">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.FlickrImageActivity"
            android:label="Photo"/>

    </application>

</manifest>
