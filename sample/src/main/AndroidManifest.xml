<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexvasilkov.gestures.sample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="GestureViews"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="Gesture Views">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ImagesPagerActivity"
            android:label="ImageView"
            android:theme="@style/AppTheme.FullDark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ImageCropActivity"
            android:label="Rotate &amp; crop"
            android:theme="@style/AppTheme.FullDark.Crop" />

        <activity
            android:name=".activities.ImageCropResultActivity"
            android:label="Cropped"
            android:theme="@style/AppTheme.FullDark" />

        <activity
            android:name=".activities.LayoutPagerActivity"
            android:label="Layout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.TextViewActivity"
            android:label="TextView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.FlickrListActivity"
            android:label="Flickr Demo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.FlickrImageActivity"
            android:label="Photo"
            android:theme="@style/AppTheme.FullDark.Transparent" />

    </application>

</manifest>
