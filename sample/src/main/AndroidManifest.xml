<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexvasilkov.gestures.sample">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme.Dark"
        android:label="GestureViews">

        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ImagesPagerActivity"
            android:label="View pager" />

        <activity
            android:name=".activities.ImageRotationActivity"
            android:label="Image rotation" />

        <activity
            android:name=".activities.LayoutPagerActivity"
            android:label="Custom layout" />

    </application>

</manifest>
